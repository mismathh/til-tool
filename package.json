{
    "devDependencies": {
        "@types/jest": "^29.5.8",
        "@types/node": "^20.6.3",
        "@typescript-eslint/eslint-plugin": "^6.9.1",
        "@typescript-eslint/parser": "^6.9.1",
        "eslint": "^8.53.0",
        "husky": "^2.7.0",
        "jest": "^29.7.0",
        "lint-staged": "^15.0.2",
        "prettier": "^3.0.3",
        "pretty-quick": "^3.1.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "commander": "^11.0.0"
    },
    "name": "til-tool",
    "description": "A command-line tool for authoring \"Today I Learned\" posts in Markdown, which can be converted to HTML for publishing on the web",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "prettier": "npx prettier --write .",
        "prettier-check": "npx prettier . --check",
        "lint": "eslint . --ext .ts",
        "lint-fix": "eslint . --ext .ts --fix",
        "prepare": "husky install",
        "test": "jest -c jest.config.ts --runInBand --",
        "test:watch": "jest -c jest.config.ts --runInBand --watch --",
        "coverage": "jest -c jest.config.ts --runInBand --coverage"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/seog-jun/til-tool.git"
    },
    "author": "Seog-Jun Hong",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/seog-jun/til-tool/issues"
    },
    "homepage": "https://github.com/seog-jun/til-tool#readme",
    "lint-staged": {
        "*.ts": "eslint --cache --fix",
        "*.{js,css,md}": "prettier --write"
    }
}
